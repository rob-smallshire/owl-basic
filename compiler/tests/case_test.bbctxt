REM BBC Basic CASE test
CASE toss% OF
  WHEN 0 : coin$ = "tails"
  WHEN 1 : coin$ = "heads"
  OTHERWISE coin$ = "cheat"
ENDCASE

CASE direction$ OF
  WHEN "left","LEFT" :
  PRINT "turn left"
  PRINT "Ta til hoeyre"
  WHEN "right","RIGHT" :
  PRINT "Turn right"
  PRINT "Ta til venstre"
  OTHERWISE
  PRINT "Straight on"
  PRINT "Rett fram"
ENDCASE

